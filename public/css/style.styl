
@import utils

font-family      = Droid Sans, sans-serif
mono-font-family = Droid Sans Mono, monospace

body
    background:     #202020
    vertical-align: middle
    color:          #efefef
    font-family:    font-family
    font-size:      7pt

a
    text-decoration: none

.body
    top:            50%
    width:          100%
    height:         190px
    margin:         -80px auto
    position:       absolute
    text-align:     center
    line-height:    0
    vertical-align: top

.container
    vertical-align: top
    margin:         0
    background:     black
    display:        inline-block
    padding:        5px

.right.container
    text-align:   left
    padding-left: 0
    height:       180px

.content.container
    padding:     0
    text-align:  left
    line-height: 1pt

    p
        margin: 4pt 0 6pt 0

    a.button
        display:    block
        color:      black
        background: #efefef
        padding:    4px 1px 6px 1px
        &:hover
            background: black
            color:      #efefef
            animation:  monochrome-pulse 0.09s linear infinite alternate

canvas
    background: #902020

.preview.container
    padding-left: 0
    display:      block

.warning > canvas
    animation: red-pulse 1s linear infinite alternate

vendors = webkit moz official

@keyframes red-pulse
  from
    background: #902020

  to
    background: #f02020


@keyframes monochrome-pulse
  from
    background: black
    color:      #efefef

  to
    background: #efefef
    color:      black

